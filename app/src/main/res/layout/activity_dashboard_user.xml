<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardUserActivity">

    <RelativeLayout
        android:id="@+id/imageViewUserDash"
        android:layout_width="414dp"
        android:layout_height="111dp"
        android:layout_marginBottom="835dp"
        android:background="@drawable/shape_for_toolbar_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    <TextView
        android:id="@+id/dashboardUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_dashboard"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/accountUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_example_com"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginEnd="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dashboardUser"/>

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_login_24"
        android:layout_alignBottom="@id/accountUser"
        android:layout_toEndOf="@+id/accountUser"
        android:layout_marginBottom="8dp"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>